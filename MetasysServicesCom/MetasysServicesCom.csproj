<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RegisterForComInterop>true</RegisterForComInterop>
    <RootNamespace>JohnsonControls.Metasys.ComServices</RootNamespace>
    <LangVersion>7.3</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Copyright>Johnson Controls Inc. 2019</Copyright>
    <Company>Johnson Controls Inc.</Company>
    <Product>Metasys Services COM</Product>
    <Authors>Johnson Controls</Authors>
    <Description>A library for accessing the most common services of the Metasys Server API through COM</Description>
    <PackageId>JohnsonControls.Metasys.ComServices</PackageId>
    <PackageProjectUrl>https://github.com/metasys-server/basic-services-dotnet</PackageProjectUrl>
    <PackageTags>Johnson Controls, Metasys, API, .NET, Services, COM</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Scripts\dotnetfx472_full_x86_x64-4.7.3081.0.exe" />
    <None Remove="Scripts\RegCOM.bat" />
    <None Remove="Scripts\UnregCOM.bat" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Scripts\dotnetfx472_full_x86_x64-4.7.3081.0.exe">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      <PackagePath>scripts</PackagePath>
    </Content>
    <Content Include="Scripts\RegCOM.bat">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      <PackagePath>scripts</PackagePath>
    </Content>
    <Content Include="Scripts\UnregCOM.bat">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      <PackagePath>scripts</PackagePath>
    </Content>
  </ItemGroup>   
  <ItemGroup>
    <ProjectReference Include="..\MetasysServices\MetasysServices.csproj" />
  </ItemGroup>  
</Project>
